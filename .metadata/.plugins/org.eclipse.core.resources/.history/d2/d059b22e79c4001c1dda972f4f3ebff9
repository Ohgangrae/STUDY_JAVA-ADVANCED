package dao;
import java.sql.*;
import java.util.ArrayList;

import javax.naming.NamingException;

import dao.*;
import dto.CommunityDTO;
import util.ConnectionPool;

public class CommunityDAO {
	public ArrayList<CommunityDTO> getList() 
			throws NamingException, SQLException{
		Connection conn=null;
		PreparedStatement pstmt=null;
		ResultSet rs=null;
		try {
			String sql="SELECT * FROM communityfeed";
			
			conn=ConnectionPool.get();
			pstmt=conn.prepareStatement(sql);
			rs=pstmt.executeQuery();
			
			ArrayList<CommunityDTO> boards=new ArrayList<CommunityDTO>();
			
	         while(rs.next()) {
	        	 communityboards.add(new CommunityDTO(rs.getString("id"),
	            		 				rs.getString("title"),
	                                  rs.getString("content"),
	                                  rs.getString("userId"),
	                                  rs.getString("creatAt"),
	                                  rs.getString("status")
	                   ));
	          }

			return community;
		}finally {
			if(rs !=null) rs.close();
			if(pstmt !=null) pstmt.close();
			if(conn !=null) conn.close();
		}
	}
	public CommunityDTO getDetail(String btitle) throws NamingException, SQLException {
		Connection conn=null;
		PreparedStatement pstmt=null;
		ResultSet rs=null;
		
		try {
			String sql="SELECT * FROM communityfeed WHERE title, = ?";
			
			conn=ConnectionPool.get();
			pstmt=conn.prepareStatement(sql);
				pstmt.setString(1, title);
			rs=pstmt.executeQuery();
			
			rs.next();
			String id=rs.getString(1);
			String title=rs.getString(2);
			String content=rs.getString(3);
			String userId=rs.getString(4);
			String creatAt=rs.getString(5);
			String status=rs.getString(6);
			
			
			CommunityDTO product= new CommunityDTO(id, title, content, userId, creatAt, status);
			return product;
				
	}finally {
		if(rs !=null) rs.close();
		if(pstmt !=null) pstmt.close();
		if(conn !=null) conn.close();
		}
	
	}

}